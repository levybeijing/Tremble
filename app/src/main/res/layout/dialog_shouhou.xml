<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="288dp"
    android:background="@mipmap/shouhou_dailog_3x"
    >
    <ImageView
        android:id="@+id/iv_erweima_dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/temp_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:id="@+id/tv_weixin_dailog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信号:1234567"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_erweima_dialog"
        android:gravity="center"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/tv_note_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="扫描二维码或复制微信号联系客服 获取售后服务"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_weixin_dailog"
        android:lines="2"
        android:gravity="center"
        />
    <Button
        android:id="@+id/btn_copy_dialog"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@mipmap/copy_dailog_3x"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_note_dialog"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>