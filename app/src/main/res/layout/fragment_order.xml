<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_mine_3x"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的抖动"
        android:textSize="20dp"
        android:background="@color/commen_top"
        android:padding="10dp"
        android:textColor="@color/white"
        />
    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cv_top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--app:cardElevation="10dp"-->
        <!--&gt;-->
        <LinearLayout
            android:id="@+id/cv_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/bg_transparent"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                >
                <!--用户头像-->
                <friendgoods.vidic.com.generalframework.mine.customview.CirImageView
                    android:id="@+id/fragment_mine_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    />
                <!--用户名-->
                <!--<friendgoods.vidic.com.generalframework.mine.customview.ColorTextView-->

                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="用户名"-->
                    <!--android:gravity="left"-->
                    <!--/>-->
                <TextView
                    android:id="@+id/fragment_mine_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:gravity="left"
                    android:textColor="#FF68BBFD"
                    android:textSize="18dp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="19dp"
                android:background="@mipmap/jiantou_my"
                android:layout_margin="15dp"

                />
        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_mine_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>




</LinearLayout>
