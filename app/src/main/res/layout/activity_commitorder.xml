<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/commen_top"
            android:gravity="left|center_vertical"
            >
            <ImageView
                android:id="@+id/iv_back_commitorder"
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:background="@mipmap/back_top_3x"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tv_top_commitorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交订单"
                android:textColor="@color/white"
                android:textSize="26dp"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_commitorder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@mipmap/indi_commit_3x"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@mipmap/newaddress_3x"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加收货地址"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    />
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:background="@mipmap/right_forward_3x"
                    />
            </LinearLayout>
            <!--详细地址页面-->
            <LinearLayout
                android:id="@+id/ll_address_commitorders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="invisible"
                android:background="@mipmap/indi_commit_3x"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/location_detailorders_3x"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_username_commitorders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"
                            />
                        <TextView
                            android:id="@+id/tv_phone_commitorders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_address_commitorders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/iv_icon_commitorder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_name_commitorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical|right"
                >
                <TextView
                    android:id="@+id/tv_price_commitorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0.00"
                    android:textColor="#f00"
                    />
                <TextView
                    android:id="@+id/tv_number_commitorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="配送方式"/>
            <TextView
                android:id="@+id/tv_kuaidi_commitorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通快递"
                />
            <ImageView
                android:id="@+id/iv_kuaidi_commitorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/right_forward_3x"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>


    </LinearLayout>
    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right|center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            />
        <TextView
            android:id="@+id/tv_moneys_commitorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:text="￥0.00"
            />
        <ImageView
            android:id="@+id/iv_commit_commitorder"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="@mipmap/commit_order_3x"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</RelativeLayout>