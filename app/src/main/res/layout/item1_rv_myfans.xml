<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/list_fans"
    >
    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/iv_item1_myfans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_item1_myfans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_icon_myfans"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/temp_icon"
        android:layout_weight="2"
        />
    <TextView
        android:id="@+id/tv_name_myfans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="董桑"
        android:layout_weight="10"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/iv_wall_myfans"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/temp_icon"
        android:layout_weight="6"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="20"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/value_myfans_3x"
            />
        <TextView
            android:id="@+id/tv_value_myfans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12312414123"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>