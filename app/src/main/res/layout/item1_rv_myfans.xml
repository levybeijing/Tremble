<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/list_fans"
    >
    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/iv_item1_myfans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_item1_myfans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_icon_myfans"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/tv_name_myfans"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="董桑"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/value_myfans_3x"
                />
            <TextView
                android:id="@+id/tv_value_myfans"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="12312414123"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>