<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_root_mywall_2x"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <friendgoods.vidic.com.generalframework.mine.customview.CirImageView
            android:id="@+id/iv_icon_pubwall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_name_pubwall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青于蓝"
                android:textColor="#fff"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/energy_mygifts_3x"
                    />
                <TextView
                    android:id="@+id/tv_energy_pubwall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FDD850"
                    android:text="0"
                    />
            </LinearLayout>
        </LinearLayout>
        <friendgoods.vidic.com.generalframework.mine.customview.customiconset.PileLayout
            android:id="@+id/customiconset_pubwall"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:PileLayout_pileWidth="10dp"
            />
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            >
            <FrameLayout
                android:id="@+id/container_pubwall"
                style="@style/rl_giftwall"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/xingxiang_pubwall"
                    android:layout_marginLeft="262dp"
                    android:layout_marginTop="307dp"
                    style="@style/xingxiang" />
            </FrameLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <LinearLayout
            android:id="@+id/ll_bottom_pubwall"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="#5000"
            >
            <ImageView
                android:id="@+id/tv_color_pubwall"
                android:layout_width="34dp"
                android:layout_height="36dp"
                android:background="@mipmap/mygift_pubwall_2x"
                android:layout_margin="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pubwall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_makesure_pubwall"
                    android:layout_width="36dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/makesure_pubwall_3x"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <ImageView
                    android:id="@+id/iv_mall_pubwall"
                    android:layout_width="36dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/mall_pubwall_3x"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>