<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_root_mywall_2x"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/commen_top"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_back_pubwall"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:background="@mipmap/back_top_3x"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友公共墙"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        >
        <friendgoods.vidic.com.generalframework.mine.customview.CirImageView
            android:id="@+id/iv_icon_pubwall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/temp_icon"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_name_pubwall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="青于蓝"
                android:textColor="#fff"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/energy_mygifts_3x"
                    />
                <TextView
                    android:id="@+id/tv_energy_pubwall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FDD850"
                    android:text="12312312"
                    />
            </LinearLayout>
        </LinearLayout>
        <friendgoods.vidic.com.generalframework.mine.customview.customiconset.PileLayout
            android:id="@+id/customiconset_pubwall"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/container_pubwall"
        style="@style/rl_giftwall"
        >
        <ImageView
            android:id="@+id/xingxiang_pubwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:id="@+id/ll_bottom_pubwall"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="#5000"
            >
            <ImageView
                android:id="@+id/tv_color_pubwall"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:background="@mipmap/mygift_pubwall_2x"
                android:layout_margin="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pubwall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/iv_makesure_pubwall"
                    android:layout_width="48dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/makesure_pubwall_3x"
                    android:layout_marginTop="15dp"
                    />
                <ImageView
                    android:id="@+id/iv_mall_pubwall"
                    android:layout_width="48dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/mall_pubwall_3x"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>