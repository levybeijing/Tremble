        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <friendgoods.vidic.com.generalframework.util.SendFragerPager
                android:id="@+id/tab_FindFragment_title"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="60dp"
                android:gravity="center_horizontal"
                app:tabIndicatorColor="#fff"
                app:tabSelectedTextColor="#fff"
                app:tabTextColor="#fff" />
            <ImageView
                android:id="@+id/to_hose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/hose"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<ImageView-->
                        <!--android:id="@+id/cat_up"-->
                        <!--android:layout_width="29dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@mipmap/left_up" />-->

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/bluetooth_bt_bg" />

                    <!--<ImageView-->
                        <!--android:id="@+id/cat_down"-->
                        <!--android:layout_width="29dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@mipmap/right_up" />-->
                </RelativeLayout>

            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_FindFragment_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
