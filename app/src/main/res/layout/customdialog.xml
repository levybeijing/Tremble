<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/lin_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/iv_goods_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/temp_icon"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tv_name_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/tv_price_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$129.00"
                android:textColor="#f00"
                android:textSize="15dp"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/close_detailgoods_3x"
            />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/div_detailgoods"
        />

    <LinearLayout
        android:id="@+id/lin_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin_first"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购买数量"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/iv_reduce_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/reduceone_detailgoods_3x"
            android:layout_marginRight="5dp"
            />
        <EditText
            android:id="@+id/et_number_dialog"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/back_buy_mall"
            android:text="5"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/iv_add_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/addone_detailgoods_3x"
            android:layout_marginRight="5dp"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_next_detailgoods"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@mipmap/next_detailgoods_3x"
        android:layout_below="@+id/lin_second"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>