<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_dialog"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        >
        <LinearLayout
            android:id="@+id/lin_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_goods_dialog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_name_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="12dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:id="@+id/tv_price_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$129.00"
                    android:textColor="#f00"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/close_detailgoods_3x"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lin_first"
            android:layout_margin="10dp"
            android:background="#BFBFBF"
            />

        <LinearLayout
            android:id="@+id/lin_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lin_first"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购买数量"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                />
            <ImageView
                android:id="@+id/iv_reduce_dialog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/reduceone_detailgoods_3x"
                android:layout_marginRight="5dp"
                />
            <EditText
                android:id="@+id/et_number_dialog"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:background="@drawable/bg_buy_mall"
                android:text="1"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                />
            <ImageView
                android:id="@+id/iv_add_dialog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/addone_detailgoods_3x"
                android:layout_marginRight="15dp"
                />

        </LinearLayout>
        <Button
            android:id="@+id/iv_next_detailgoods"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@mipmap/next_detailgoods_3x"
            android:layout_below="@+id/lin_second"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

</RelativeLayout>