<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="90dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/iv_rv_pubwall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/temp_icon"
            />
        <TextView
            android:id="@+id/tv_numberlast_rv_pubwall"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/dot_pubwall_3x"
            android:text="1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:textColor="#fff"
            android:textSize="10dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_name_rv_pubwall"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textColor="#FFC53B"
        android:text="赞"
        android:gravity="center"
        android:textSize="10dp"
        />
    <TextView
        android:id="@+id/tv_energy_rv_pubwall"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:textColor="#fff"
        android:text="666能量"
        android:textSize="10dp"
        android:gravity="center"
        />
</LinearLayout>