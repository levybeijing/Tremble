<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_icon_myorders"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_goods_myorders"
            android:src="@mipmap/temp_icon"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_name_myorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/tv_guige_myorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品规格"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:id="@+id/tv_price_myorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$69.00"
                android:textSize="16dp"
                android:textColor="#f00"
                />
            <TextView
                android:id="@+id/tv_status_myorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:layout_below="@+id/tv_price_myorders"
                />
            <TextView
                android:id="@+id/tv_number_myorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1"
                android:layout_below="@+id/tv_status_myorders"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_zongjie_myorders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件商品  合计:¥69.00(含运费¥0.00)"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <Button
            android:id="@+id/iv_left_goods_myorders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/iv_right_goods_myorders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
</LinearLayout>