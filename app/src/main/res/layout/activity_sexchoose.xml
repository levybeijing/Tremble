<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#f8e65c"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:id="@+id/rl_man_sex"
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:id="@+id/bg_man_sex"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_sexchoose"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv_man_sex"
                    android:layout_width="46dp"
                    android:layout_height="67dp"
                    android:src="@mipmap/man_sex_3x"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_man_mars_sex"
                    android:layout_width="131dp"
                    android:layout_height="234dp"
                    android:background="@mipmap/man2"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv_woman_mars_sex"
                    android:layout_width="131dp"
                    android:layout_height="234dp"
                    android:background="@mipmap/woman2"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            >
            <RelativeLayout
                android:id="@+id/rl_woman_sex"
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:id="@+id/bg_woman_sex"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_sexchoose"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv_woman_sex"
                    android:layout_width="46dp"
                    android:layout_height="67dp"
                    android:src="@mipmap/women_sex_3x"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <ImageView
                    android:id="@+id/iv_man_earth_sex"
                    android:layout_width="128dp"
                    android:layout_height="220dp"
                    android:background="@mipmap/man1"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/iv_woman_earth_sex"
                    android:layout_width="128dp"
                    android:layout_height="220dp"
                    android:background="@mipmap/woman1"
                    android:visibility="invisible"
                    />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>