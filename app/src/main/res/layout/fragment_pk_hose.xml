<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#facd89"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/to_hose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/hose_return" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/pk_persion_one"
                        android:layout_width="match_parent"
                        android:layout_height="136dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/stage_one" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:src="@mipmap/woman_one" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_below="@+id/pk_persion_one">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/score_one" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="d896987"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="136dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/stage_two" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:src="@mipmap/woman_one" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_below="@+id/pk_persion_one">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/score_two" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="d896987"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:background="@mipmap/food_button" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="120dp"
                        android:layout_height="136dp"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/stage_three" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:src="@mipmap/woman_two" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_below="@+id/pk_persion_one">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/score_three" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="d896987"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/hose_ready"
                android:layout_width="156dp"
                android:layout_height="66dp"
                android:background="@mipmap/hose_ready"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/hose_time_one"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:gravity="center"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@mipmap/edit_bg"/>
            <TextView
                android:id="@+id/hose_time_two"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:layout_width="42dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@mipmap/edit_bg"/>
            <TextView
                android:id="@+id/hose_branch_one"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:gravity="center"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@mipmap/edit_bg"/>
            <TextView
                android:id="@+id/hose_branch_two"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:gravity="center"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:background="@mipmap/edit_bg"/>
            <TextView
                android:id="@+id/hose_second_one"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:gravity="center"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@mipmap/edit_bg"/>
            <TextView
                android:id="@+id/hose_second_two"
                android:textSize="25dp"
                android:text="0"
                android:textColor="#ED3195"
                android:gravity="center"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:background="@mipmap/edit_bg"/>
            <ImageView
                android:id="@+id/hose_second_sure"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/hose_ok"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
