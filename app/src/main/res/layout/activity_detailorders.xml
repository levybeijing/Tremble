<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/top_my_3x"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_back_detailorders"
            android:layout_width="14dp"
            android:layout_height="24dp"
            android:background="@mipmap/back_top_3x"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/bg_detailorders_3x"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/finish_detailorders_3x"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="16dp"
            android:textColor="#fff"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/div_detailorders"
        />
    <!--位置 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@mipmap/location_detailorders_3x"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_username_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清风"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"

                    />
                <TextView
                    android:id="@+id/tv_phone_orders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678989"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>
            <TextView
                android:id="@+id/tv_address_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址:天津市 天津市 滨海新区 开发区 第二大街融汇大厦"
                />
        </LinearLayout>
    </LinearLayout>
    <!--商品详情-->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/div_detailorders"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/iv_icon_orders"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/temp_icon"
            android:background="@drawable/bg_goods_myorders"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_name_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/tv_number_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="1dp"
                />
            <TextView
                android:id="@+id/tv_price_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="129.00"
                android:textColor="#f00"
                android:textSize="16dp"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/div_detailorders"
        />
    <!--订单标号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/tv_serial_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号:"
            />
        <TextView
            android:id="@+id/tv_time_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间:"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/div_next_"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tv_payway_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式:"
            />
        <TextView
            android:id="@+id/tv_paytime_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付时间:"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <!--商品总额-->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/div_detailorders"
        />
    <!--申请售后-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:gravity="right"
        >
        <Button
            android:id="@+id/btn_shouhou_detailorders"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="申请售后"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/div_detailorders"
        />
</LinearLayout>