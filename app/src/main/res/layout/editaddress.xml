<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/top_my_3x"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_top_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/left_back_3x"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑收货地址"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <!--地址编辑部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            />
        <EditText
            android:id="@+id/edit_name_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="姓名"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            />
        <EditText
            android:id="@+id/edit_phone_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号码"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件地区"
            />
        <EditText
            android:id="@+id/edit_district_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="收件地区"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            />
        <EditText
            android:id="@+id/edit_detailaddress_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="如街道/小区门牌等"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            />
        <Switch
            android:id="@+id/switch_default_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!---->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_delete_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/delete_editaddress_3x"
            android:layout_margin="20dp"
            />
        <ImageView
            android:id="@+id/iv_save_editaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/save_editaddress_3x"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</LinearLayout>