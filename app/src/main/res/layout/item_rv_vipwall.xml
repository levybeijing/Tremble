<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    >
    <ImageView
        android:id="@+id/iv_wall_vipwall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <CheckBox
        android:id="@+id/box_flag_vipwall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/selector_vipwall"
        android:button="@null"
        android:visibility="invisible"
        />
    <LinearLayout
        android:id="@+id/ll_bottom_vipwall"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#5000"
        >
        <friendgoods.vidic.com.generalframework.mine.customview.CirImageView
            android:id="@+id/iv_icon_item_vipwall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
        <TextView
            android:id="@+id/tv_name_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:singleLine="true"
            android:textColor="#fff"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/iv_energy_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/energy_mygifts_3x"
            />
        <TextView
            android:id="@+id/tv_number_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="333"
            android:textColor="#FDD850"
            />
    </LinearLayout>
</RelativeLayout>