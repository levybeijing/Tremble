<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="265dp"
    >
    <CheckBox
        android:id="@+id/box_vipwall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@drawable/selector_vipwall"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/iv_wall_vipwall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/temp_big"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:background="#000"
        >
        <ImageView
            android:id="@+id/iv_icon_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/temp_icon"
            />
        <TextView
            android:id="@+id/tv_name_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="董桑"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/iv_energy_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/energy_mygifts_3x"
            />
        <TextView
            android:id="@+id/tv_number_item_vipwall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="333"
            android:textColor="#FDD850"
            />
    </LinearLayout>
</RelativeLayout>