<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_frag_vipwalltop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <LinearLayout
            android:id="@+id/ll_unchoose_vipwalltop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_edit_vipwalltop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_choose_vipwall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:gravity="center_vertical"
            >
            <CheckBox
                android:id="@+id/rb_chooseall_frag_vipwallbelowl"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_vipwall"
                />
            <TextView
                android:id="@+id/tv_chooose_vipwall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="全选"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/btn_down_frag_vipwallbelow"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:background="@mipmap/down_vip"
                />
            <ImageView
                android:id="@+id/btn_delete_frag_vipwallbelow"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:background="@mipmap/cancel_vip"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>