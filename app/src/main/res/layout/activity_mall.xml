<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/commen_top"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/iv_back_mall"
            android:layout_width="16dp"
            android:layout_height="27dp"
            android:background="@mipmap/back_top_3x"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抖腿商城"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/background_mall_3x"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_smallTitle"
            android:text="抖腿自营"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tv_smallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="抖腿检测 记录频率 音乐好抖"
            android:textColor="#73C8DC"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/doutuibi_3x"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抖腿币"
            />
        <TextView
            android:id="@+id/tv_numberofcoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1314"
            android:textColor="#FFC849"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_mygifts_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的礼物" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:background="@mipmap/right_forward_3x"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_mall"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>